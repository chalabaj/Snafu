[Settings]
natoms  = 3               # number of atoms in system
nstates = 1               # number of electronic states
init_state = 1            # initial electronic state: state 0(ground state), 1 (1.ex. state),.....
timestep = 4              # in atomic unit au = 0.024 fs 
maxsteps = 100            # total number of steps
method  = adiabatic       # adiabatic (LZ Belyaev) / diabatization scheme (LZ parametric Lee Yu PCCP)
abinitio  = test          # where to take gradients (gaussian, molpro...)
restart = 0
hopping = 1               # 1 - hopping allowed, 0 - hopping disabled (BOMD)