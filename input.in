[Settings]
natoms  = 3               # number of atoms in system
nstates = 3               # number of electronic states
init_state = 2            # initial electronic state
timestep = 4              # in atomic unit au = 0.024 fs 
maxsteps = 100             # total number of steps
method  = bomd     # bomd/lz-adibatic (Belyaev)/ lz-diabatic scheme
abinitio  = molpro-casscf        # where to take gradients,file has to start  g09 or molpro to distinguish between forces and gradients
restart = 0
vel_adj = 0                # 0  - simple scaling K = sqrt(1+-dE/Ekin), 1 new velociting from hoppingp oint are included in verlet step
